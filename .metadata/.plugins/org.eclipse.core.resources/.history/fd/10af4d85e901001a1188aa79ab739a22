package polyMorph;

import java.util.Scanner;
import static java.lang.System.out;
public class polyDemo {
  static Scanner sc;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int x=0,y=0;
		float a=0,b=0;
		double result=0.0;
		int choice;
		
		x=sc.nextInt();
		y=sc.nextInt();
		choice =sc.nextInt();
		out.println("1. Add two integers \n 2.Add two real numbers \n3.Exit");
		out.println("Enter your choice(1-3):");
		
		switch(choice)
		{
		case 1: result=add(x,y);
		break;
		case 2: result=add(a,b);
		break;
		case 3:
		break;
		}
		
		}
	
	public static int add(int x,int y)
	{
		out.println("Enter first Integer");
		x=sc.nextInt();
		out.println("Enter first Integer");
		y=sc.nextInt();
		return x+y;
	}
	public static int add(float a,float b)
	{
		out.println("Enter first number");
		a=sc.nextFloat();
		out.println("Enter first number");
		b=sc.nextFloat();
		return a+b;
	}
}
